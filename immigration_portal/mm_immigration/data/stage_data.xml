<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Stage 1: Invited -->
        <record id="stage_invited" model="mm.immigration.stage">
            <field name="name">Invited</field>
            <field name="sequence">10</field>
            <field name="state">invited</field>
            <field name="portal_description">Welcome! We're excited to help you on your immigration journey. Please complete the initial questionnaire to get started.</field>
            <field name="portal_action_text">Start Questionnaire</field>
            <field name="portal_action_url">/my/immigration/questionnaire/pre</field>
        </record>

        <!-- Stage 2: Onboarding -->
        <record id="stage_onboarding" model="mm.immigration.stage">
            <field name="name">Onboarding</field>
            <field name="sequence">20</field>
            <field name="state">onboarding</field>
            <field name="portal_description">Thank you for starting your application. Please complete the pre-consultation questionnaire so we can assess your eligibility.</field>
            <field name="portal_action_text">Continue Questionnaire</field>
            <field name="portal_action_url">/my/immigration/questionnaire/pre</field>
        </record>

        <!-- Stage 3: Quoted -->
        <record id="stage_quoted" model="mm.immigration.stage">
            <field name="name">Quoted</field>
            <field name="sequence">30</field>
            <field name="state">quoted</field>
            <field name="portal_description">Based on your profile, we've prepared a personalized service quote for your review. Please review and sign the service agreement to proceed.</field>
            <field name="portal_action_text">Review Quote</field>
            <field name="portal_action_url">/my/immigration/quote</field>
            <field name="requires_signature" eval="True"/>
        </record>

        <!-- Stage 4: Payment -->
        <record id="stage_payment" model="mm.immigration.stage">
            <field name="name">Payment</field>
            <field name="sequence">40</field>
            <field name="state">paid</field>
            <field name="portal_description">Thank you for signing the service agreement. Please complete your payment to unlock the detailed assessment phase.</field>
            <field name="portal_action_text">Pay Now</field>
            <field name="portal_action_url">/my/immigration/pay</field>
            <field name="requires_payment" eval="True"/>
        </record>

        <!-- Stage 5: Assessment -->
        <record id="stage_assessment" model="mm.immigration.stage">
            <field name="name">Assessment</field>
            <field name="sequence">50</field>
            <field name="state">assessment</field>
            <field name="portal_description">Payment received! Please complete the detailed immigration profile questionnaire. This information will be used to calculate your CRS score and generate your personalized roadmap.</field>
            <field name="portal_action_text">Complete Assessment</field>
            <field name="portal_action_url">/my/immigration/questionnaire/detailed</field>
        </record>

        <!-- Stage 6: Roadmap Delivered -->
        <record id="stage_roadmap" model="mm.immigration.stage">
            <field name="name">Roadmap Delivered</field>
            <field name="sequence">60</field>
            <field name="state">roadmap_delivered</field>
            <field name="portal_description">Your personalized Immigration Roadmap is ready! Please review it carefully and sign the acknowledgment to proceed to the consultation phase.</field>
            <field name="portal_action_text">View Roadmap</field>
            <field name="portal_action_url">/my/immigration/roadmap</field>
            <field name="requires_signature" eval="True"/>
        </record>

        <!-- Stage 7: Consultation -->
        <record id="stage_consultation" model="mm.immigration.stage">
            <field name="name">Consultation</field>
            <field name="sequence">70</field>
            <field name="state">call_scheduled</field>
            <field name="portal_description">You're almost there! Schedule your consultation call with your assigned RCIC consultant to discuss your roadmap and next steps.</field>
            <field name="portal_action_text">Book Consultation</field>
            <field name="portal_action_url">/my/immigration/book</field>
        </record>

        <!-- Stage 8: Application -->
        <record id="stage_application" model="mm.immigration.stage">
            <field name="name">Application</field>
            <field name="sequence">80</field>
            <field name="state">application</field>
            <field name="portal_description">Your immigration application is in progress. Track your milestones and upload required documents here.</field>
            <field name="portal_action_text">View Progress</field>
            <field name="portal_action_url">/my/immigration/application</field>
            <field name="is_closing_stage" eval="True"/>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Portal Branding Settings -->
        <record id="config_portal_name" model="ir.config_parameter">
            <field name="key">mm_immigration.portal_name</field>
            <field name="value">The Migration Monitor</field>
        </record>

        <record id="config_portal_email" model="ir.config_parameter">
            <field name="key">mm_immigration.portal_email</field>
            <field name="value">ask@themigrationmonitor.ca</field>
        </record>

        <record id="config_portal_website" model="ir.config_parameter">
            <field name="key">mm_immigration.portal_website</field>
            <field name="value">https://themigrationmonitor.ca</field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Profile Tree View -->
    <record id="view_client_profile_tree" model="ir.ui.view">
        <field name="name">mm.client.profile.tree</field>
        <field name="model">mm.client.profile</field>
        <field name="arch" type="xml">
            <list string="Client Profiles">
                <field name="partner_id"/>
                <field name="age"/>
                <field name="citizenship_country_id"/>
                <field name="marital_status"/>
                <field name="highest_education"/>
                <field name="work_experience_years"/>
                <field name="eca_status" widget="badge" 
                       decoration-info="eca_status == 'not_started'"
                       decoration-warning="eca_status == 'in_progress'"
                       decoration-success="eca_status == 'completed'"/>
            </list>
        </field>
    </record>

    <!-- Client Profile Form View -->
    <record id="view_client_profile_form" model="ir.ui.view">
        <field name="name">mm.client.profile.form</field>
        <field name="model">mm.client.profile</field>
        <field name="arch" type="xml">
            <form string="Client Profile">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Contact">
                            <field name="partner_id"/>
                            <field name="case_id"/>
                        </group>
                        <group string="Personal Information">
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="citizenship_country_id"/>
                            <field name="residence_country_id"/>
                            <field name="marital_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Education" name="education">
                            <group>
                                <group>
                                    <field name="highest_education"/>
                                    <field name="education_country_id"/>
                                </group>
                                <group>
                                    <field name="eca_status"/>
                                    <field name="eca_reference"/>
                                </group>
                            </group>
                        </page>
                        <page string="Work Experience" name="work">
                            <group>
                                <group>
                                    <field name="current_occupation"/>
                                    <field name="work_experience_years"/>
                                </group>
                                <group>
                                    <field name="work_country_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Dependent Children" name="children">
                            <field name="has_children"/>
                            <field name="children_ids" invisible="not has_children">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="date_of_birth"/>
                                    <field name="age"/>
                                    <field name="country_id"/>
                                    <field name="is_accompanying"/>
                                </list>
                            </field>
                        </page>
                        <page string="Financial" name="financial">
                            <group>
                                <group>
                                    <field name="settlement_funds"/>
                                </group>
                            </group>
                        </page>
                        <page string="Canada Connections" name="canada">
                            <group>
                                <group>
                                    <field name="has_family_in_canada"/>
                                    <field name="studied_in_canada"/>
                                    <field name="worked_in_canada"/>
                                    <field name="previous_visa_application"/>
                                </group>
                            </group>
                        </page>
                        <page string="Risk Factors" name="risk">
                            <group>
                                <group>
                                    <field name="visa_refusal"/>
                                    <field name="criminal_history"/>
                                    <field name="medical_conditions"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Client Profile Search View -->
    <record id="view_client_profile_search" model="ir.ui.view">
        <field name="name">mm.client.profile.search</field>
        <field name="model">mm.client.profile</field>
        <field name="arch" type="xml">
            <search string="Search Profiles">
                <field name="partner_id"/>
                <field name="citizenship_country_id"/>
                <field name="highest_education"/>
                <separator/>
                <filter string="Has ECA" name="has_eca" domain="[('eca_status', '=', 'completed')]"/>
                <filter string="ECA Pending" name="eca_pending" domain="[('eca_status', 'in', ['not_started', 'in_progress'])]"/>
                <separator/>
                <filter string="With Children" name="with_children" domain="[('has_children', '=', True)]"/>
                <separator/>
                <filter string="Country" name="group_country" context="{'group_by': 'citizenship_country_id'}"/>
                <filter string="Education" name="group_education" context="{'group_by': 'highest_education'}"/>
                <filter string="ECA Status" name="group_eca" context="{'group_by': 'eca_status'}"/>
            </search>
        </field>
    </record>

    <!-- Client Profile Action -->
    <record id="action_client_profile" model="ir.actions.act_window">
        <field name="name">Client Profiles</field>
        <field name="res_model">mm.client.profile</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No client profiles yet
            </p>
            <p>
                Client profiles are created automatically when an immigration case is created.
            </p>
        </field>
    </record>
</odoo>

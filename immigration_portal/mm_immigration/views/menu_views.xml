    <!-- Profiles Menu -->
    <menuitem id="menu_immigration_profiles"
              name="Profiles"
              parent="menu_immigration_root"
              action="action_client_profile"
              sequence="20"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_immigration_config"
              name="Configuration"
              parent="menu_immigration_root"
              sequence="100"
              groups="mm_immigration.group_immigration_manager"/>

    <menuitem id="menu_immigration_stages"
              name="Stages"
              parent="menu_immigration_config"
              action="action_immigration_stage"

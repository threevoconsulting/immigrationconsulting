    <menuitem id="menu_immigration_root"
              name="Immigration"
              sequence="50"
              web_icon="mm_immigration,static/description/icon.png"
              groups="mm_immigration.group_immigration_user"/>

    <!-- Cases Menu -->
    <menuitem id="menu_immigration_cases"
              name="Cases"
              parent="menu_immigration_root"
              sequence="10"/>

    <menuitem id="menu_immigration_case_my"
              name="My Cases"
              parent="menu_immigration_cases"
              action="action_immigration_case"
              sequence="10"/>

    <menuitem id="menu_immigration_case_all"
              name="All Cases"
              parent="menu_immigration_cases"
              action="action_immigration_case_all"

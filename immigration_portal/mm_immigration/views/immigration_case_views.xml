<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Immigration Case Kanban View -->
    <record id="view_immigration_case_kanban" model="ir.ui.view">
        <field name="name">mm.immigration.case.kanban</field>
        <field name="model">mm.immigration.case</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="consultant_id"/>
                <field name="immigration_goal"/>
                <field name="stage_id"/>
                <field name="kanban_state"/>
                <field name="priority"/>
                <field name="portal_invited"/>
                <progressbar field="kanban_state" colors='{"done": "success", "blocked": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="mt-1">
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="mt-1 text-muted">
                                        <span t-if="record.immigration_goal.raw_value">
                                            <field name="immigration_goal"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <span t-if="record.portal_invited.raw_value" 
                                              class="badge rounded-pill text-bg-info ms-1"
                                              title="Portal Invited">
                                            <i class="fa fa-user-circle" title="Portal Invited" role="img" aria-label="Portal Invited"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="consultant_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Immigration Case Tree View -->
    <record id="view_immigration_case_tree" model="ir.ui.view">
        <field name="name">mm.immigration.case.tree</field>
        <field name="model">mm.immigration.case</field>
        <field name="arch" type="xml">
            <list string="Immigration Cases" multi_edit="1">
                <field name="name" decoration-bf="1"/>
                <field name="partner_id"/>
                <field name="client_email"/>
                <field name="immigration_goal"/>
                <field name="stage_id" widget="badge"/>
                <field name="consultant_id" widget="many2one_avatar_user"/>
                <field name="portal_invited" widget="boolean"/>
                <field name="create_date" string="Created"/>
                <field name="activity_ids" widget="list_activity"/>
            </list>
        </field>
    </record>
    <!-- Immigration Case Form View -->
    <record id="view_immigration_case_form" model="ir.ui.view">
        <field name="name">mm.immigration.case.form</field>
        <field name="model">mm.immigration.case</field>
        <field name="arch" type="xml">
            <form string="Immigration Case">
                <header>
                    <button name="action_send_portal_invite" 
                            type="object" 
                            string="Send Portal Invite"
                            class="btn-primary"
                            invisible="portal_invited"
                            groups="mm_immigration.group_immigration_consultant"/>
                    <button name="action_advance_stage"
                            type="object"
                            string="Advance Stage"
                            class="btn-secondary"
                            groups="mm_immigration.group_immigration_consultant"/>
                    <field name="stage_id" widget="statusbar" 
                           options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_profile"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-user">
                            <span class="o_stat_text">Profile</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Invited" 
                            bg_color="bg-info"
                            invisible="not portal_invited"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Client Information">
                            <field name="partner_id"/>
                            <field name="client_email"/>
                            <field name="client_phone"/>
                        </group>
                        <group string="Case Details">
                            <field name="consultant_id"/>
                            <field name="immigration_goal"/>
                            <field name="target_year"/>
                            <field name="recommended_pathway"/>
                            <field name="priority"/>
                        </group>
                    </group>
                    <group string="Portal Access" invisible="not portal_invited">
                        <group>
                            <field name="portal_invited" readonly="1"/>
                            <field name="portal_invite_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="portal_first_access" readonly="1"/>
                            <field name="stage_progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Profile" name="profile">
                            <field name="profile_id" mode="form" 
                                   context="{'default_partner_id': partner_id}"/>
                        </page>
                        <page string="Documents" name="documents">
                            <group>
                                <group string="Deliverables">
                                    <field name="roadmap_document" filename="roadmap_filename"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Note:</strong> Additional document fields (agreements, invoices) 
                                will be available when those modules are installed.
                            </div>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="internal_notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Immigration Case Search View -->
    <record id="view_immigration_case_search" model="ir.ui.view">
        <field name="name">mm.immigration.case.search</field>
        <field name="model">mm.immigration.case</field>
        <field name="arch" type="xml">
            <search string="Search Cases">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="client_email"/>
                <field name="consultant_id"/>
                <separator/>
                <filter string="My Cases" name="my_cases" 
                        domain="[('consultant_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned"
                        domain="[('consultant_id', '=', False)]"/>
                <separator/>
                <filter string="Portal Invited" name="invited"
                        domain="[('portal_invited', '=', True)]"/>
                <filter string="Not Invited" name="not_invited"
                        domain="[('portal_invited', '=', False)]"/>
                <separator/>
                <filter string="Permanent Residence" name="pr"
                        domain="[('immigration_goal', '=', 'pr')]"/>
                <filter string="Temporary" name="temporary"
                        domain="[('immigration_goal', '=', 'temporary')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority"
                        domain="[('priority', '=', '1')]"/>
                <separator/>
                <filter string="Stage" name="group_stage" 
                        context="{'group_by': 'stage_id'}"/>
                <filter string="Consultant" name="group_consultant"
                        context="{'group_by': 'consultant_id'}"/>
                <filter string="Goal" name="group_goal"
                        context="{'group_by': 'immigration_goal'}"/>
                <filter string="Created" name="group_create"
                        context="{'group_by': 'create_date:month'}"/>
            </search>
        </field>
    </record>

    <!-- Immigration Case Actions -->
    <record id="action_immigration_case" model="ir.actions.act_window">
        <field name="name">Immigration Cases</field>
        <field name="res_model">mm.immigration.case</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_my_cases': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first immigration case
            </p>
            <p>
                Immigration cases track the entire journey from initial inquiry 
                through to PR application.
            </p>
        </field>
    </record>

    <record id="action_immigration_case_all" model="ir.actions.act_window">
        <field name="name">All Cases</field>
        <field name="res_model">mm.immigration.case</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No immigration cases yet
            </p>
        </field>
    </record>
</odoo>
